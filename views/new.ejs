    <form action="/blogs" method="POST" class="ui form">
        <!-- <label>Title</label> -->
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="Title for your blog">
        </div>
        <div class="field">
                <label>Image</label>
                <input type="text" name="blog[image]" placeholder="Image for your blog">
        </div>        
